<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="14dp">
            <!--        android:backgroundTint="@color/grey_300"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_300">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="24dp">
<!--                    android:elevation="18dp"-->
<!--                    app:cardElevation="18dp">-->
                    <!--        android:backgroundTint="@color/grey_300"-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/Food_IMG_image"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/black"

                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_background" />


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Food_LBL_Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_toEndOf="@+id/Food_IMG_image"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text="FOOD item"
                            android:textSize="18sp"
                            android:textStyle="bold|italic" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Food_LBL_Insulin"
                            android:layout_width="147dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Food_LBL_Title"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_toEndOf="@+id/Food_LBL_Insulin2"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text="Insulin dose" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Food_LBL_Insulin2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Food_LBL_Title"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_toEndOf="@+id/Food_IMG_image"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text="Insulin dose" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Food_LBL_SugarBefore2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Food_LBL_Insulin"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_toEndOf="@+id/Food_IMG_image"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text="Sugar Before" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Food_LBL_SugarBefore"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Food_LBL_Insulin"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_toEndOf="@+id/Food_LBL_SugarBefore2"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text="Sugar Before" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Food_LBL_SugarAfter2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Food_LBL_SugarBefore2"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_toEndOf="@+id/Food_IMG_image"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text="Sugar After" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Food_LBL_SugarAfter"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Food_LBL_SugarBefore2"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_toEndOf="@+id/Food_LBL_SugarAfter2"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text="Sugar After" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>







</RelativeLayout>